</header>
<style>
    .flip-wrapper {
        width: 200px;
        height: 300px;
        margin: 0 auto;
        perspective: 1000px;
    }

    .card {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        background-color: #28282D;
    }

    .card.spin {
        animation: spinAnimation 3s ease-in-out forwards;
    }

    @keyframes spinAnimation {
        0% { transform: rotateY(0deg); }
        100% { transform: rotateY(1440deg); } /* 4 vòng */
    }

    .card-face {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 12px;
        backface-visibility: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .front {
        /*background: transparent;*/
        z-index: 2;
    }
</style>
<!-- end header -->
<!-- sidebar -->
{{>sidebar}}
<!-- main content -->
