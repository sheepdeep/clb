<script>
    function flipImage() {

        const card = document.getElementById('card');
        const frontImg = document.getElementById('cardFrontImg');

        frontImg.src = "/themes/images/latthe.png";

        $.ajax({
            url: '/nohu',
            datatype:'json',
            type: 'post',
            success: function (data) {
                if (!data.success) {
                    $('#err-msg').html(`<p class="text-${data.success ? 'success' : 'danger'}">${data.message}</p>`)
                    roll_check = true;
                    return;
                }
                if (data.success) {
                    if (!card.classList.contains('spin')) {
                        card.classList.add('spin');
                        card.style.backgroundColor = '#28282D';
                        // Sau 3s mới hiện phần quà
                        setTimeout(() => {
                            card.classList.remove('spin');
                            frontImg.src = data.gift.image;
                            $('#err-msg').html(`<p class="text-success">${data.message}</p>`)
                            // reward.classList.remove('hidden');
                        }, 2800);
                    }
                }
            },
            error: function(){
                $('#err-msg').html(`<p class="text-danger">Có lỗi xảy ra. Vui lòng thử lại!</p>`)

            }
        })

        // Nếu chưa lật

    }
</script>
