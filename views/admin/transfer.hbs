{{>head}}
{{>nav}}
<main class="main-content">
    <div class="contents">
        <div class="crm mb-25">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb-main">
                            <h4 class="text-capitalize breadcrumb-title">{{ title }}</h4>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-20">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title">
                                    <a href="{{ originalUrl.pathname }}" class="text-dark">
                                        <img src="../themes/admin/images/transfer.png" alt="" width="35">
                                        Chuyển Tiền
                                        <img src="../themes/admin/images/transfer.png" class="d-md-none" width="35">
                                    </a>
                                </h6>
                            </div>
                            <div class="card-body">
                                <form action="" method="post" class="form-axios">
                                    <div class="form-group">
                                        <label for="" class="il-gray fs-14 fw-500 mb-10">Số Điện Thoại</label>
                                        <select name="phone" class="form-control ih-medium ip-light select2">
                                            {{#each phones}}
                                            <option value="{{ this.phone }}">{{ this.phone }} - {{ numberFormat
                                                this.balance
                                                }}đ</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="il-gray fs-14 fw-500 mb-10">Người Nhận</label>
                                        <input type="text" name="receiver" class="form-control ih-medium ip-light"
                                            placeholder="Nhập số điện thoại người nhận">
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="il-gray fs-14 fw-500 mb-10">Số Tiền</label>
                                        <input type="number" name="amount" class="form-control ih-medium ip-light"
                                            placeholder="Nhập số tiền cần chuyển">
                                    </div>
                                    <div class="form-group">
                                        <label for="" class="il-gray fs-14 fw-500 mb-10">Nội Dung</label>
                                        <input type="text" name="comment" class="form-control ih-medium ip-light"
                                            placeholder="Nhập nội dung cần chuyển">
                                    </div>
                                    <div class="row gutters-xs mb-3">
                                        <label for="" class="il-gray fs-14 fw-500 mb-10">OTP</label>
                                        <div class="col">
                                            <input type="number" name="otp" class="form-control ih-medium ip-light"
                                                placeholder="Nhập mã otp được gửi đến phía admin!">
                                        </div>
                                        <span class="col-auto">
                                            <button type="button" class="btn btn-outline-success get-otp"
                                                data-action="useTrans">
                                                Lấy OTP
                                            </button>
                                        </span>
                                    </div>
                                    <div class="content-center">
                                        <button type="submit" class="btn btn-primary"><i
                                                class="fas fa-exchange-alt"></i> Chuyển
                                            Tiền</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{{>foot}}