<script type="text/javascript">
    $(document).ready(function (e) {
        $('body').on('click', '.rework', function (e) {
            let transId = $(this).data('id');

            $('[name="transId"]').val(transId);
            $('[data-bs-modal="rework"] h5.modal-title').html(`Trả Thưởng Giao Dịch #${transId}`);
            $('[data-bs-modal="rework"]').modal('show')
        })

        $('body').on('click', '.reCheck', function (e) {
            let transId = $(this).data('id');

            loadAjax('start');
            instance.post('/history/reCheck', {transId})
                    .then((result) => {
                        let response = result.data;

                        if (!response.success) {
                            swal('Thông Báo', response.message, 'error');
                            return;
                        }

                        $('[data-bs-modal="reCheck"] tbody.web').html('').append(`<tr><td>Mã giao dịch</td><td class="text-info">#${response.data[0].transId}</td></tr><tr><td>Người nhận</td><td class="text-warning">${response.data[0].targetId}</td></tr><tr><td>Người chuyển</td><td class="text-primary">${response.data[0].partnerId}</td></tr><tr><td>Tiền cược</td><td class="text-danger">${Intl.NumberFormat('en-US').format(response.data[0].amount)}đ</td></tr><tr><td>Nội dung</td><td class="text-success">${response.data[0].comment}</td></tr><tr><td>Thời gian</td><td class="text-secondary">${moment(response.data[0].timeTLS).format('DD-MM-YYYY HH:mm:ss')}</td></tr>`);
                        $('[data-bs-modal="reCheck"] tbody.api').html('').append(`<tr><td>Mã giao dịch</td><td class="text-info">#${response.data[1].transId}</td></tr><tr><td>Người nhận</td><td class="text-warning">${response.data[1].targetId}</td></tr><tr><td>Người chuyển</td><td class="text-primary">${response.data[1].partnerId}</td></tr><tr><td>Tiền cược</td><td class="text-danger">${Intl.NumberFormat('en-US').format(response.data[1].amount)}đ</td></tr><tr><td>Nội dung</td><td class="text-success">${response.data[1].comment}</td></tr><tr><td>Thời gian</td><td class="text-secondary">${moment(response.data[1].timeTLS).format('DD-MM-YYYY HH:mm:ss')}</td></tr>`);
                        $('[data-bs-modal="reCheck"').modal('show');
                    })
                    .catch(err => {
                        swal('Thông Báo', err.message || err, 'warning');
                    })
                    .finally(() => loadAjax('stop'));
        })

        $('body').on('click', '.checkAction', function (e) {
            let transId = $(this).data('id');

            loadAjax('start');
            instance.post('/history/checkAction', {transId})
                    .then((result) => {
                        let response = result.data;

                        if (!response.success) {
                            swal('Thông Báo', response.message, 'error');
                            return;
                        }

                        $('[data-bs-modal="checkAction"] h5.modal-title').html(`Thao Tác Chỉnh Sửa #${transId}`)
                        $('[data-bs-modal="checkAction"] tbody').html('').append(response.data.map((obj) => `<tr><td>${obj.username}</td><td>${obj.key}</td><td>${obj.value}</td><td>${moment(obj.createdAt).format('DD-MM-YYYY HH:mm:ss')}</td></tr>`));
                        $('[data-bs-modal="checkAction"').modal('show');
                    })
                    .catch(err => {
                        swal('Thông Báo', err.message || err, 'warning');
                    })
                    .finally(() => loadAjax('stop'));
        })
    })
</script>