{{>head}}
{{>nav}}
<main class="main-content">
    <div class="contents">
        <div class="crm mb-25">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb-main">
                            <h4 class="text-capitalize breadcrumb-title">{{ title }}</h4>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-20">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title">
                                    <a href="{{ originalUrl.pathname }}" class="text-dark">
                                        <img src="../themes/admin/images/reward.png" alt="" width="35">
                                        Danh Sách Trả Thưởng
                                        <img src="../themes/admin/images/reward.png" class="d-md-none" width="35">
                                    </a>
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="userDatatable adv-table-table global-shadow border-light-0 adv-table">
                                    <div id="filter-form-container"
                                        class="footable-filtering-external content-center">
                                        <form>
                                            <div class="form-inline">
                                                <div class="form-group footable-filtering-search mb-3 me-sm-30 me-0">
                                                    <div class="input-group">
                                                        <input type="search" class="form-control" name="search"
                                                            placeholder="Nội dung tìm kiếm..." value="{{ search }}">
                                                    </div>
                                                </div>
                                                <div
                                                    class="form-group dm-select d-flex align-items-center adv-table-searchs__status mb-3 me-sm-30 me-0">
                                                    <label
                                                        class="d-flex align-items-center mb-sm-0 mb-2 fs-15 fw-500">Loại</label>
                                                    <select name="resultType" class="form-control ms-sm-10 ms-0">
                                                        {{#select resultType}}
                                                        <option value="">Tất Cả</option>
                                                        <option value="end">Số Cuối</option>
                                                        <option value="count_3">Tổng 3 Số</option>
                                                        <option value="minus_3">Hiệu 3 Số</option>
                                                        {{/select}}
                                                    </select>
                                                </div>
                                                
                                            </div>
                                            <div class="form-group mb-3">
                                                <button class="btn btn-primary btn-sm btn-block"><i class="fa fa-search"
                                                        aria-hidden="true"></i> Tìm kiếm</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="table-responsive mb-3">
                                    <table
                                        class="table table-vcenter text-nowrap table-bordered text-center table-mb sort-table">
                                        <thead class="badge-secondary text-white">
                                            <tr>
                                                <th>Trò Chơi {{{ tableSort originalUrl.search 'gameType' _sort }}}</th>
                                                <th>Nội Dung {{{ tableSort originalUrl.search 'content' _sort }}}</th>
                                                <th>Kết Quả</th>
                                                <th>Tiền Thưởng {{{ tableSort originalUrl.search 'amount' _sort }}}</th>
                                                <th>Loại {{{ tableSort originalUrl.search 'resultType' _sort }}}</th>
                                                <th>Thời Gian {{{ tableSort originalUrl.search 'updatedAt' _sort }}}
                                                </th>
                                                <th><span data-bs-submit="reward" data-bs-action="add"><i
                                                            class="fa fa-plus-circle" aria-hidden="true"></i></span>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody data-table="reward">
                                            {{#each rewards}}
                                            <tr class="edit-one" data-id="{{ this._id }}">
                                                <td data-bs-name="gameType" data-bs-hasEdit="true">
                                                    <span data-bs-table="html" data-bs-value="{{ this.gameType }}">
                                                        <span class="badges badge-secondary" data-bs-html="true">{{
                                                            this.gameType }}</span>
                                                    </span>
                                                    <span data-bs-table="edit" data-bs-value="{{ this.gameType }}">
                                                        <input type="text" class="form-control ih-medium ip-light mb-2"
                                                            data-bs-edit="true">
                                                    </span>
                                                </td>
                                                <td data-bs-name="content" data-bs-hasEdit="true">
                                                    <span data-bs-table="html" data-bs-value="{{ this.content }}">
                                                        <span data-bs-html="true">{{ this.content }}</span>
                                                    </span>
                                                    <span data-bs-table="edit" data-bs-value="{{ this.content }}">
                                                        <input type="text" class="form-control ih-medium ip-light mb-2"
                                                            data-bs-edit="true">
                                                    </span>
                                                </td>
                                                <td data-bs-name="numberTLS" data-bs-hasEdit="true">
                                                    <span data-bs-table="html" data-bs-value="{{ joinArray
                                                            this.numberTLS ' - '}}">
                                                        <textarea class="form-control text-center"
                                                            data-bs-html="true">{{ joinArray
                                                            this.numberTLS ' - '}}</textarea>
                                                    </span>
                                                    <span data-bs-table="edit" data-bs-value="{{ joinArray
                                                            this.numberTLS ' - '}}">
                                                        <textarea class="form-control mb-2" rows="3" data-bs-edit="true"
                                                            data-bs-key="array">{{ joinArray
                                                            this.numberTLS ' - '}}</textarea>
                                                    </span>
                                                </td>
                                                <td data-bs-name="amount" data-bs-hasEdit="true">
                                                    <span data-bs-table="html" data-bs-value="{{ this.amount }}">
                                                        <strong><span style="color: red;">x</span> <span
                                                                data-bs-html="true">{{ this.amount }}</span></strong>
                                                    </span>
                                                    <span data-bs-table="edit" data-bs-value="{{ this.amount }}">
                                                        <input type="text" class="form-control ih-medium ip-light mb-2"
                                                            data-bs-edit="true">
                                                    </span>
                                                </td>
                                                <td data-bs-name="resultType" data-bs-hasEdit="true">
                                                    <span data-bs-table="html" data-bs-value="{{ this.resultType }}">
                                                        <span data-bs-html="true">
                                                            {{#ifCond this.resultType '==' 'count_3'}}
                                                            <span class="badges badge-warning">Tổng 3 Số</span>
                                                            {{/ifCond}}
                                                            {{#ifCond this.resultType '==' 'minus_3'}}
                                                            <span class="badges badge-warning">Hiệu 3 Số</span>
                                                            {{/ifCond}}
                                                            {{#ifCond this.resultType '==' 'end'}}
                                                            <span class="badges badge-success">Số Cuối</span>
                                                            {{/ifCond}}
                                                        </span>
                                                    </span>
                                                    <span data-bs-table="edit" data-bs-value="{{ this.resultType }}">
                                                        <select class="form-control ih-medium ip-light mb-2"
                                                            data-bs-edit="true">
                                                            <option value="end">Số Cuối</option>
                                                            <option value="count_3">Tổng 3 Số</option>
                                                            <option value="minus_3">Hiệu 3 Số</option>
                                                        </select>
                                                    </span>
                                                </td>
                                                <td>{{ formatDate this.updatedAt 'HH:mm:ss DD-MM-YYYY'}}</td>
                                                <td>
                                                    <div class="table-actions hand">
                                                        <span class="badges badge-danger" data-bs-submit="reward"
                                                            data-bs-action="remove" data-id="{{ this._id }}"><i
                                                                class="fa fa-trash" aria-hidden="true"></i></span>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{else}}
                                            <tr>
                                                <td colspan="12">
                                                    <div class="dm-empty text-center">
                                                        <div class="dm-empty__image">
                                                            <img src="../themes/admin/images/1.png" alt="Rỗng">
                                                        </div>
                                                        <div class="dm-empty__text">
                                                            <p class="">Không có dữ liệu !</p>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <nav class="dm-page">
                                        <ul class="dm-pagination d-flex">
                                            <li class="dm-pagination__item">
                                                {{#paginate pagination type="previous"}}
                                                <a href="{{ baseURL }}?{{#if query }}{{ query }}&page={{n}}{{else}}page={{n}}{{/if}}"
                                                    class="dm-pagination__link pagination-control {{#if disabled}}disabled{{/if}}">
                                                    <span class="la la-angle-left"></span>
                                                </a>
                                                {{/paginate}}
                                                {{#paginate pagination type="middle" limit=pagination.limit}}
                                                <a href="{{ baseURL }}?{{#if query }}{{ query }}&page={{n}}{{else}}page={{n}}{{/if}}"
                                                    class="dm-pagination__link {{#if active}}active{{/if}}"><span
                                                        class="page-number">{{n}}</span>
                                                </a>
                                                {{/paginate}}
                                                {{#paginate pagination type="next"}}
                                                <a href="{{ baseURL }}?{{#if query }}{{ query }}&page={{n}}{{else}}page={{n}}{{/if}}"
                                                    class="dm-pagination__link pagination-control {{#if disabled}}disabled{{/if}}">
                                                    <span class="la la-angle-right"></span>
                                                </a>
                                                {{/paginate}}
                                            </li>
                                            <li class="dm-pagination__item">
                                                <div class="paging-option">
                                                    <select name="perPage" class="page-selection"
                                                        data-query="{{ checkQuery originalUrl.search 'perPage' }}">
                                                        {{#select perPage }}
                                                        <option value="10">10/page</option>
                                                        <option value="20">20/page</option>
                                                        <option value="40">40/page</option>
                                                        <option value="60">60/page</option>
                                                        <option value="100">100/page</option>
                                                        <option value="200">200/page</option>
                                                        <option value="500">500/page</option>
                                                        {{/select}}
                                                    </select>
                                                </div>
                                            </li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Modal Add Reward -->
<div class="modal fade" data-bs-modal="reward-add" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-gamepad" aria-hidden="true"></i> Thêm Kết Quả Trả Thưởng</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="#" method="post" class="form-axios">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="" class="il-gray fs-14 fw-500 mb-10">Trò Chơi</label>
                        <select name="gameType" class="form-control ih-medium ip-light">
                            {{#each games}}
                            <option value="{{ this.gameType }}">{{ this.name }} - {{ this.gameType }}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="" class="il-gray fs-14 fw-500 mb-10">Nội Dung</label>
                        <input type="text" name="content" class="form-control ih-medium ip-light"
                            placeholder="Nội dung chuyển tiền">
                    </div>
                    <div class="form-group">
                        <label for="" class="il-gray fs-14 fw-500 mb-10">Kết Quả</label>
                        <textarea name="numberTLS" rows="3" class="form-control"
                            placeholder="Mỗi kết quả cách nhau bằng dấu '-', ví dụ 1 - 2 - 3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="" class="il-gray fs-14 fw-500 mb-10">Tiền Thưởng</label>
                        <input type="text" name="amount" class="form-control ih-medium ip-light"
                            placeholder="Nhập số tiền thưởng khi thắng ( tiền cược x tiền thưởng )">
                    </div>
                    <div class="form-group">
                        <label for="" class="il-gray fs-14 fw-500 mb-10">Loại</label>
                        <select name="resultType" class="form-control ih-medium ip-light">
                            <option value="end">Số Cuối</option>
                            <option value="count_3">Tổng 3 Số</option>
                            <option value="minus_3">Hiệu 3 Số</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light btn-sm" data-bs-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-primary btn-sm">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{>foot}}