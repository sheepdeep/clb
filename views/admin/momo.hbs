        $('body').on('submit', '#formAdd', function (e) {
            e.preventDefault();
            let action = $('.action-add').data('action');
            let data = $(this).serialize();

            let convertData = data.split('=');

            $('.action-add').html(`<div class="dm-spin-dots spin-sm"><span class="spin-dot badge-dot dot-light"></span><span class="spin-dot badge-dot dot-light"></span><span class="spin-dot badge-dot dot-light"></span><span class="spin-dot badge-dot dot-light"></span></div>`).prop('disabled', true);

            if (convertData[1] === 'file') {

                const fileInput = document.getElementById('jsonFile');

                if (fileInput.files.length === 0) {
                    alert("Please select a JSON file.");
                    return;
                }

                // Get the selected file
                const file = fileInput.files[0];

                // Check if the file is a JSON file
                if (file.type !== "application/json") {
                    alert("Please select a valid JSON file.");
                    return;
                }

                // Create a FileReader to read the file
                const reader = new FileReader();

                // Define the onload event handler for the FileReader
                reader.onload = function (event) {
                    // Get the file content
                    const fileContent = event.target.result;

                    try {
                        // Parse the JSON content
                        const jsonData = JSON.parse(fileContent);

                        axios.post(`/api/v2/momo/${action}`, jsonData)

                                .then((result) => {
                                    const res = result.data;
                                    $('.action-add').html(action == 'otp' ? (res.success ? 'Xác Nhận' : 'Thêm') : (action == 'confirm' ? (res.success ? 'Đăng Nhập' : 'Xác Nhận') : 'Thêm')).prop('disabled', false);
                                    if (res.success) {
                                        swal('Thông báo', res.message, 'success');
                                        setTimeout(() => window.location.reload(), 1500);  // Reload after success
                                    } else {
                                        swal('Thông báo', res.message, 'error');
                                    }
                                })
                                .catch((err) => {
                                    swal('Thông Báo', err.message || err, 'error');
                                });
                    } catch (error) {
                        // Handle JSON parsing error
                        swal('Error', 'Invalid JSON format', 'error');
                    }
                };

                // Read the file as text
                reader.readAsText(file);

                console.log('Gui du lieu momo bang json')
            } else {
                axios.post(`/api/v2/momo/${action}`, data)
                        .then((result) => {
                            let res = result.data;

                            $('.action-add').html(action == 'otp' ? (res.success ? 'Xác Nhận' : 'Thêm') : (action == 'confirm' ? (res.success ? 'Đăng Nhập' : 'Xác Nhận') : 'Thêm')).prop('disabled', false);

                            switch (action) {
                                case 'otp':
                                    res.success ? swal('Thông báo', res.message, 'success') && $('input[name=proxy]').val(res.proxy) && $('.action-add').data('action', 'confirm') : swal('Thông báo', res.message, 'error');
                                    break;
                                case 'confirm':
                                    res.success ? swal('Thông báo', res.message, 'success') && $('input[name=imei]').val(res.imei) && $('.action-add').data('action', 'login') : swal('Thông báo', res.message, 'error');
                                    break;
                                case 'login':
                                    res.success ? swal('Thông báo', res.message, 'success') && setTimeout(() => window.location.reload(), 1500) : swal('Thông báo', res.message, 'error');
                                    break;
                            }
                        })
                        .catch((err) => {
                            $('textarea[name=error]').textContent(err.dataResult);
                            swal('Thông Báo', err.message || err, 'error');
                        })
            }
        })
    })
