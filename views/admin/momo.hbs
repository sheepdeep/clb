                $('#formMomo').html('').html('<div><label class="kt-form-label">Số Điện Thoại</label> <input class="kt-input gap-1"name=phone placeholder="Nhập số điện thoại..."></div><div class><label class="kt-form-label">Mật Khẩu</label> <input class="kt-input"name=password placeholder="Nhập mật khẩu"type=password></div><div class><label class="kt-form-label">OTP</label> <input class="kt-input"name=otp placeholder="Nhập otp nếu có"type=number></div><div class><label class="kt-form-label">PROXY</label> <input class="kt-input"name=proxy readonly></div><div class><label class="kt-form-label">IMEI</label> <input class="kt-input"name=imei readonly></div><div class><label class="kt-form-label">Kết quả</label> <textarea class="kt-input"name=error rows=5></textarea></div>')
            } else if (typeMomo === 'business') {
                $('#formMomo').html('').html('<div><label class="kt-form-label">Số Điện Thoại</label> <input class="kt-input"name=phone placeholder="Nhập số điện thoại..."></div><div class><label class="kt-form-label">Mật Khẩu</label> <input class="kt-input"name=password placeholder="Nhập mật khẩu"type=password></div><div class><label class="kt-form-label">storeKey</label> <input class="kt-input"name=storeKey placeholder="Nhập storeId"></div><div class><label class="kt-form-label">partnerCode</label> <input class="kt-input"name=partnerCode placeholder="Nhập partnerCode"></div><div class><label class="kt-form-label">accessKey</label> <input class="kt-input"name=accessKey placeholder="Nhập accessKey"></div><div class><label class="kt-form-label">secretKey</label> <input class="kt-input"name=secretKey placeholder="Nhập secretKey"></div>')
            } else if (typeMomo === 'file') {
                $('#formMomo').html('').html('<div><label class="kt-form-label">File Json</label><input class="kt-input" type="file" id="jsonFile" name="file" accept=".json"></div>')
            } else {
                $('#formMomo').html('');
            }
        });
        $('body').on('submit', '#formAdd', function (e) {
            e.preventDefault();
            let action = $('.action-add').data('action');
            let data = $(this).serialize();

            let convertData = data.split('=');

            $('.action-add').html(`<div class="dm-spin-dots spin-sm"><span class="spin-dot badge-dot dot-light"></span><span class="spin-dot badge-dot dot-light"></span><span class="spin-dot badge-dot dot-light"></span><span class="spin-dot badge-dot dot-light"></span></div>`).prop('disabled', true);

            if (convertData[1] === 'file') {

                const fileInput = document.getElementById('jsonFile');

                if (fileInput.files.length === 0) {
                    alert("Please select a JSON file.");
                    return;
                }

                // Get the selected file
                const file = fileInput.files[0];

                // Check if the file is a JSON file
                if (file.type !== "application/json") {
                    alert("Please select a valid JSON file.");
                    return;
                }

                // Create a FileReader to read the file
                const reader = new FileReader();

                // Define the onload event handler for the FileReader
                reader.onload = function (event) {
                    // Get the file content
                    const fileContent = event.target.result;

                    try {
                        // Parse the JSON content
                        const jsonData = JSON.parse(fileContent);

                        axios.post(`/api/v2/momo/${action}`, jsonData)

                                .then((result) => {
                                    const res = result.data;
                                    $('.action-add').html(action == 'otp' ? (res.success ? 'Xác Nhận' : 'Thêm') : (action == 'confirm' ? (res.success ? 'Đăng Nhập' : 'Xác Nhận') : 'Thêm')).prop('disabled', false);
                                    if (res.success) {
                                        Swal.fire('Thông báo', res.message, 'success');
                                        setTimeout(() => window.location.reload(), 1500);  // Reload after success
                                    } else {
                                        Swal.fire('Thông báo', res.message, 'error');
                                    }
                                })
                                .catch((err) => {
                                    Swal.fire('Thông Báo', err.message || err, 'error');
                                });
                    } catch (error) {
                        // Handle JSON parsing error
                        Swal.fire('Error', 'Invalid JSON format', 'error');
                    }
                };

                // Read the file as text
                reader.readAsText(file);

                console.log('Gui du lieu momo bang json')
            } else {
                axios.post(`/api/v2/momo/${action}`, data)
                        .then((result) => {
                            let res = result.data;

                            $('.action-add').html(action == 'otp' ? (res.success ? 'Xác Nhận' : 'Thêm') : (action == 'confirm' ? (res.success ? 'Đăng Nhập' : 'Xác Nhận') : 'Thêm')).prop('disabled', false);

                            switch (action) {
                                case 'otp':
                                    res.success ? Swal.fire('Thông báo', res.message, 'success') && $('input[name=proxy]').val(res.proxy) && $('.action-add').data('action', 'confirm') : Swal.fire('Thông báo', res.message, 'error');
                                    break;
                                case 'confirm':
                                    res.success ? Swal.fire('Thông báo', res.message, 'success') && $('input[name=imei]').val(res.imei) && $('.action-add').data('action', 'login') : Swal.fire('Thông báo', res.message, 'error');
                                    break;
                                case 'login':
                                    res.success ? Swal.fire('Thông báo', res.message, 'success') && setTimeout(() => window.location.reload(), 1500) : Swal.fire('Thông báo', res.message, 'error');
                                    break;
                            }
                        })
                        .catch((err) => {
                            $('textarea[name=error]').textContent(err.dataResult);
                            Swal.fire('Thông Báo', err.message || err, 'error');
                        })
            }
        })

    })
</script>
