                image: img,
                dotsOptions: { color: bgc, type: "rounded" },
                backgroundOptions: { color: "#FFF" },
                imageOptions: { crossOrigin: "anonymous", margin: 5, imageSize: 0.5 },
            });
            console.log(qrCode);
            $("#canvasQr").html(""), qrCode.append(document.getElementById("canvasQr"));
