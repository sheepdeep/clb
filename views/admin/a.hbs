<script type="text/javascript">
    $(document).ready(function (e) {

        $('body').on('click', '.action-more', function (e) {
            let _this = $(this);
            let action = _this.data('action');
            let phone = _this.data('id');

            switch (action) {
                case 'qr':
                    _this.prop('disabled', true);
                    axios.post('/api/v2/momo/qr', {phone})
                            .then((result) => {
                                let response = result.data;

                                console.log(response);

                                if (response.success) {
                                    $('#qrModal').modal('show');
                                    loadQR(response.data.accountNumber, 'https://developers.momo.vn/v3/assets/images/square-8c08a00f550e40a2efafea4a005b1232.png', '#0070FF');
                                }

                                response.success ? swal('Thông Báo', response.message, 'success') : swal('Thông Báo', response.message, 'error');
                            })
                            .catch(err => swal('Thông Báo', `Có lỗi xảy ra ${err.message || err}`, 'warning'))
                            .finally(() => _this.prop('disabled', false))
                    break;
                case 'noti':
                    _this.prop('disabled', true);
                    axios.post('/api/v2/momo/noti', {phone})
                            .then((result) => {
                                let response = result.data;

                                response.success ? swal('Thông Báo', response.message, 'success') : swal('Thông Báo', response.message, 'error');
                            })
                            .catch(err => swal('Thông Báo', `Có lỗi xảy ra ${err.message || err}`, 'warning'))
                            .finally(() => _this.prop('disabled', false))
                    break;
                case 'export':
                    _this.prop('disabled', true);
                    axios.post('/api/v2/momo/export', {phone})
                            .then((result) => {
                                let response = result.data;

                                // if(response.success) {
                                const jsonString = JSON.stringify(response);
                                const file = new Blob([jsonString], {type: 'application/json'});

                                // Create a link element to trigger the download
                                const link = document.createElement('a');
                                link.href = URL.createObjectURL(file);
                                link.download = phone + '.json'; // Set the download filename

                                // Append the link to the body, click it to start the download, and remove it
                                document.body.appendChild(link);
                                link.click();
                                // swal('Thông Báo', response.message, 'success')
                                // } else {
                                //     swal('Thông Báo', response.message, 'error')
                                // }
                            })
                            .catch(err => swal('Thông Báo', `Có lỗi xảy ra ${err.message || err}`, 'warning'))
                            .finally(() => _this.prop('disabled', false))
                    break;
                case 'balance':
                    _this.prop('disabled', true);
                    axios.post('/api/v2/momo/balance', {phone})
                            .then((result) => {
                                let response = result.data;

                                response.success ? swal('Thông Báo', response.message, 'success') && _this.parent().parent().parent().find('td.amount').html(`${Intl.NumberFormat('en-US').format(response.balance)}đ`) : swal('Thông Báo', response.message, 'error');
                            })
                            .catch(err => swal('Thông Báo', `Có lỗi xảy ra ${err.message || err}`, 'warning'))
                            .finally(() => _this.prop('disabled', false))
                    break;
                case 'refresh':
                    _this.prop('disabled', true);
                    axios.post('/api/v2/momo/refresh', {phone})
                            .then((result) => {
                                let response = result.data;

                                response.success ? swal('Thông Báo', response.message, 'success') : swal('Thông Báo', response.message, 'error');
                            })
                            .catch(err => swal('Thông Báo', `Có lỗi xảy ra ${err.message || err}`, 'warning'))
                            .finally(() => _this.prop('disabled', false))
                    break;
                default:
                    swal('Thông Báo', 'Thao tác không hợp lệ!', 'warning');
                    break;
            }
        })

        $('select[name=type]').on('change', function () {
            let typeMomo = $(this).val();
