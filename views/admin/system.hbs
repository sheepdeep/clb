{{>head}}
{{>nav}}
<main class="main-content">
    <div class="contents">
        <div class="crm mb-25">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb-main">
                            <h4 class="text-capitalize breadcrumb-title">{{ title }}</h4>
                        </div>
                    </div>
                    <div class="col-lg-12 mb-25">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="card-title hand" data-bs-toggle="tooltip" data-bs-placement="right"
                                    data-bs-original-title="Cập nhập vào {{ timeNow settings.updatedAt }}">
                                    <img src="../themes/admin/images/setting.png" alt="" width="35">
                                    Cài Đặt Hệ Thống
                                    <img src="../themes/admin/images/setting.png" class="d-md-none" width="35">
                                </h6>
                            </div>
                            <div class="card-body">
                                <form action="" method="post" id="formSetting">
                                    <div class="row">
                                        {{!-- Bắt Đầu Dữ Liệu Cơ Bản --}}
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">X3 </label>
                                                <select name="x3" class="form-control ih-medium ip-light">
                                                    {{#select settings.x3 }}
                                                        <option value="active">Bật</option>
                                                        <option value="inactive">Tắt</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Tên
                                                    Website</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="nameSite" value="{{ settings.nameSite }}"
                                                    placeholder="Nhập tên website của bạn">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Tiêu Đề</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="defaultTitle" value="{{ settings.defaultTitle }}"
                                                    placeholder="Nhập tiêu đề website">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Icon Website</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="favicon" value="{{ settings.favicon }}"
                                                    placeholder="Nhập link icon website của bạn">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Logo Website</label>
                                                <input type="text" class="form-control ih-medium ip-light" name="logo"
                                                    value="{{ settings.logo }}"
                                                    placeholder="Nhập link logo website của bạn">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Thumbnail</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="thumbnail" value="{{ settings.thumbnail }}"
                                                    placeholder="Nhập link thumbnail website">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Mô Tả</label>
                                                <textarea class="form-control" name="description" rows="5"
                                                    placeholder="Nhập mô tả website của bạn">{{ settings.description
                                                    }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Từ Khóa</label>
                                                <textarea class="form-control" name="keywords" rows="5"
                                                    placeholder="Nhập từ khóa tìm kiếm website của bạn">{{
                                                    settings.keywords
                                                    }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500">Note [Template
                                                    Default]</label>
                                                <textarea name="note" class="form-control-lg form-editor" rows="5"
                                                    placeholder="Type your message...">{{{ settings.note }}}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Header Script</label>
                                                <textarea class="form-control" name="headerScript" rows="3"
                                                    placeholder="headerScript">{{ settings.headerScript
                                                    }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Footer Script</label>
                                                <textarea class="form-control" name="footerScript" rows="3"
                                                    placeholder="footerScript">{{
                                                    settings.footerScript
                                                    }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Số Lượng Hiển
                                                    Thị</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="limitPhone" value="{{ settings.limitPhone }}"
                                                    placeholder="Nhập số lượng số cần chạy">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Nội Dung Nạp
                                                    Tiền</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="paymentComment" value="{{ settings.paymentComment }}"
                                                    placeholder="Nhập nội dung nhận biết khi nạp tiền vào số ( thống kê )">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Nội Dung Rút
                                                    Tiền</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="withdrawComment" value="{{ settings.withdrawComment }}"
                                                    placeholder="Nhập nội dung nhận biết khi rút tiền ra khỏi số ( thống kê )">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Trạng Thái Site</label>
                                                <select name="siteStatus" class="form-control ih-medium ip-light">
                                                    {{#select settings.siteStatus }}
                                                    <option value="active">Hoạt Động</option>
                                                    <option value="maintenance">Bảo Trì</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Mã Quà Tặng</label>
                                                <select name="giftCode-status" class="form-control ih-medium ip-light">
                                                    {{#select settings.giftCode.status }}
                                                    <option value="active">Bật</option>
                                                    <option value="close">Tắt</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">BOT TOKEN
                                                    [TELEGRAM]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="telegram-token" value="{{ settings.telegram.token }}"
                                                    placeholder="Nhập token bot telegram">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">CHAT ID
                                                    [TELEGRAM]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="telegram-chatId" value="{{ settings.telegram.chatId }}"
                                                    placeholder="Nhập token bot telegram">
                                            </div>
                                        </div>
                                        {{!-- Kết Thúc Dữ Liệu Cơ Bản --}}
                                        {{!-- Bắt Đầu Comment Site --}}
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="comment, transId, amount, bonus">Giao Dịch
                                                    [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-rewardGD"
                                                    value="{{ settings.commentSite.rewardGD }}"
                                                    placeholder="Nhập nội dung trả thưởng giao dịch">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="transId, time">Bill Đầu [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-refundBill"
                                                    value="{{ settings.commentSite.refundBill }}"
                                                    placeholder="Nhập nội dung hoàn tiền bill đầu">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="top, bonus, count, time">Đua TOP
                                                    [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-rewardTOP"
                                                    value="{{ settings.commentSite.rewardTOP }}"
                                                    placeholder="Nhập nội dung trả thưởng đua top">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="amount, bonus, count, time">Nhiệm Vụ Ngày
                                                    [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-rewardMission"
                                                    value="{{ settings.commentSite.rewardMission }}"
                                                    placeholder="Nhập nội dung trả thưởng nhiệm vụ ngày">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="transId, amount">Nổ Hũ [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-rewardJackpot"
                                                    value="{{ settings.commentSite.rewardJackpot }}"
                                                    placeholder="Nhập nội dung trả thưởng nổ hũ">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="transId, status">Hoàn tiền [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-refundGD"
                                                    value="{{ settings.commentSite.refundGD }}"
                                                    placeholder="Nhập nội dung hoàn tiền GD">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="code, amount">Quà Tặng [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-rewardGift"
                                                    value="{{ settings.commentSite.rewardGift }}"
                                                    placeholder="Nhập nội dung trả thưởng mã quà tặng">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10"
                                                    data-bs-toggle="tooltip" data-bs-placement="top"
                                                    data-bs-original-title="session, amount">Điểm Danh [COMMENT]</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="commentSite-rewardMuster"
                                                    value="{{ settings.commentSite.rewardMuster }}"
                                                    placeholder="Nhập nội dung trả thưởng điểm danh">
                                            </div>
                                        </div>
                                        {{!-- Kết Thúc Comment Site --}}
                                        {{!-- Bắt Đầu Lịch Sử --}}
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Loại API</label>
                                                <select name="history-dataType" class="form-control ih-medium ip-light">
                                                    {{#select settings.history.dataType }}
                                                    <option value="history">Mặc Định</option>
                                                    <option value="noti">Thông Báo</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Giới Hạn Quét</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="history-limit" value="{{ settings.history.limit }}"
                                                    placeholder="Nhập số giao dịch quét mỗi lần">
                                            </div>
                                        </div>
                                        {{!-- Kết Thúc Lịch Sử --}}
                                        {{!-- Bắt Đầu Trả Thưởng --}}
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Loại Trả Thưởng</label>
                                                <select name="reward-dataType" class="form-control ih-medium ip-light">
                                                    {{#select settings.reward.dataType }}
                                                    <option value="all">Trả Hết</option>
                                                    <option value="limit">Giới Hạn</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Giới Hạn Trả</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="reward-limit" value="{{ settings.reward.limit }}"
                                                    placeholder="Nhập số lượng tối đa trả thưởng mỗi lần">
                                            </div>
                                        </div>
                                        {{!-- Kết Thúc Trả Thưởng --}}
                                        {{!-- Bắt Đầu Hoàn Tiền --}}
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Hoàn Tiền</label>
                                                <select name="refund-status" class="form-control ih-medium ip-light">
                                                    {{#select settings.refund.status }}
                                                    <option value="active">Có</option>
                                                    <option value="close">Không</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Thắng Hoàn (%)</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="refund-win" value="{{ settings.refund.win }}"
                                                    placeholder="Nhập số phần trăm hoàn tiền khi thắng">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Thua Hoàn (%)</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="refund-won" value="{{ settings.refund.won }}"
                                                    placeholder="Nhập số phần trăm hoàn tiền khi thua">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Sai Nội Dung Hoàn
                                                    (%)</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="refund-fail" value="{{ settings.refund.fail }}"
                                                    placeholder="Nhập số phần trăm hoàn tiền khi bị sai nội dung">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Giới Hạn Hoàn</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="refund-limit" value="{{ settings.refund.limit }}"
                                                    placeholder="Nhập số lần hoàn tiền trong 1 ngày">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Phần Quà Random</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="refund-random" value="{{ settings.refund.random }}"
                                                    placeholder="Nhập phần chăm nhận khi pem">
                                            </div>
                                        </div>
                                        {{!-- Kết Thúc Hoàn Tiền --}}
                                        {{!-- Bắt Đầu Nổ Hũ --}}
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Nổ Hũ</label>
                                                <select name="jackpot-status" class="form-control ih-medium ip-light">
                                                    {{#select settings.jackpot.status }}
                                                    <option value="active">Bật</option>
                                                    <option value="close">Tắt</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Tiền Hũ</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="jackpotCount" value="{{ settings.jackpotCount }}"
                                                    placeholder="Nhập số tiền trong hũ">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Tiền Trừ Hũ</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="jackpot-amount" value="{{ settings.jackpot.amount }}"
                                                    placeholder="Nhập số tiền trừ mỗi lần khi tham gia hũ">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Mã Nổ Hũ</label>
                                                <input type="text" class="form-control ih-medium ip-light"
                                                    name="jackpot-numberTLS"
                                                    value="{{ joinArray settings.jackpot.numberTLS ' - ' }}"
                                                    placeholder="Nhập list mã trúng thưởng nổ hũ, mỗi số cách nhau bằng dấu -">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500">Note [JACKPOT]</label>
                                                <textarea class="form-control form-editor" name="jackpot-noti" rows="10"
                                                    placeholder="Nhập lưu ý nổ hũ">{{
                                                    settings.jackpot.noti
                                                    }}</textarea>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500">Note [GIFT_CODE]</label>
                                                <textarea class="form-control form-editor" name="giftCode-noti"
                                                    rows="10" placeholder="Nhập lưu ý nổ hũ">{{
                                                    settings.giftCode.noti
                                                    }}</textarea>
                                            </div>
                                        </div>
                                        {{!-- Kết Thúc Nổ Hũ --}}
                                        {{!-- Bắt Đầu Điểm Danh --}}
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Điểm Danh</label>
                                                <select name="muster-status" class="form-control ih-medium ip-light">
                                                    {{#select settings.muster.status }}
                                                    <option value="active">Bật</option>
                                                    <option value="close">Tắt</option>
                                                    {{/select }}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Bắt Đầu
                                                    [MUSTER]</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="muster-startTime" value="{{ settings.muster.startTime }}"
                                                    placeholder="Nhập thời gian bắt đầu chạy điểm danh ( giờ )">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Kết Thúc
                                                    [MUSTER]</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="muster-endTime" value="{{ settings.muster.endTime }}"
                                                    placeholder="Nhập thời gian kết thúc điểm danh ( giờ )">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Thời Gian
                                                    [MUSTER]</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="muster-delay" value="{{ settings.muster.delay }}"
                                                    placeholder="Nhập số giây mỗi vòng quay điểm danh ( giây )">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="" class="il-gray fs-14 fw-500 mb-10">Tối Thiểu
                                                    [MUSTER]</label>
                                                <input type="number" class="form-control ih-medium ip-light"
                                                    name="muster-min" value="{{ settings.muster.min }}"
                                                    placeholder="Nhập số tiền thưởng tối thiểu [RANDOM]">
                                            </div>
                                        </div>
