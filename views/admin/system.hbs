                    break;
                case 'edit':
                    $(this).parent().html(`<span class="badges badge-success" data-bs-action="save"><i class="fas fa-save"></i></span>`);

                    tr.find('td[data-bs-key]').each(function (e) {
                        let type = $(this).attr('data-bs-type');
