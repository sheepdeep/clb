                    })

                    if (tr.find('td[data-bs-key="html"]')) {
                        let html = tr.find('td[data-bs-key="html"]').attr('data-bs-value');
                        tr.find('td[data-bs-render="html"]').html(`<center>${html}</center>`)
                    }

                    tbody.find('[data-bs-position="true"]') && resetTOP(tbody);
                    break;
                case 'remove':
                    tr.remove();
                    tbody.find('[data-bs-position="true"]') && resetTOP(tbody);
                    break;
                default:
